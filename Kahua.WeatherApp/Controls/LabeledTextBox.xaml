<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="Kahua.WeatherApp.Controls.LabeledTextBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{x:Bind Label}"
                   Style="{ThemeResource TextBlockStyle}" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" CornerRadius="10" VerticalAlignment="Center" Text="{x:Bind Text, Mode=TwoWay}"
                 BeforeTextChanging="TextBox_OnBeforeTextChanging" TextAlignment="Right"
                 LostFocus="UIElement_OnLostFocus" />
    </Grid>
</UserControl>